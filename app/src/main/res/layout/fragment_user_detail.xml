<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.UserDetailFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="사용자 상세 정보"
            app:subtitle="실시간 상태 모니터링" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 사용자 기본 정보 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="사용자 정보"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_myplaces"
                            android:contentDescription="사용자 아바타"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="?attr/colorPrimary"
                            android:padding="12dp"
                            android:tint="@android:color/white"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_name_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="사용자 이름"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/user_email_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="user@example.com"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/user_phone_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="010-1234-5678"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                        <View
                            android:id="@+id/user_status_indicator"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="?attr/colorPrimary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/contact_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="연락처 정보"
                            android:textSize="12sp"
                            app:icon="@android:drawable/ic_menu_call"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/history_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="히스토리 보기"
                            android:textSize="12sp"
                            app:icon="@android:drawable/ic_menu_recent_history"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 현재 센서 상태 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="현재 센서 상태"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="16dp" />

                    <!-- SafeLink Band 센서 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SafeLink Band"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="심박수:"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                            <TextView
                                android:id="@+id/heart_rate_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- BPM"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="체온:"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                            <TextView
                                android:id="@+id/body_temperature_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- °C"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="배터리:"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                            <TextView
                                android:id="@+id/band_battery_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- %"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- SafeLink Hub 센서 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SafeLink Hub"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorSecondary"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="주변 온도:"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                            <TextView
                                android:id="@+id/ambient_temperature_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- °C"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="습도:"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                            <TextView
                                android:id="@+id/humidity_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- %"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="소음:"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                            <TextView
                                android:id="@+id/noise_level_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- dB"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="WBGT:"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                            <TextView
                                android:id="@+id/wbgt_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- °C"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="배터리:"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                            <TextView
                                android:id="@+id/hub_battery_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- %"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 위험 정보 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="위험 정보"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <View
                            android:id="@+id/risk_level_indicator"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/risk_level_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="안전"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/risk_timestamp_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="방금 전"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/risk_description_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="모든 센서 값이 정상 범위입니다."
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="12dp" />

                    <!-- 최근 위험 이벤트 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="최근 위험 이벤트"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:id="@+id/recent_risk_events_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- 위험 이벤트 아이템들이 동적으로 추가됨 -->

                    </LinearLayout>

                    <TextView
                        android:id="@+id/no_risk_events_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="최근 위험 이벤트가 없습니다."
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:gravity="center"
                        android:padding="16dp"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 디바이스 정보 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="디바이스 정보"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="연결 상태:"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:id="@+id/device_connection_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="연결됨"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="디바이스명:"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:id="@+id/device_name_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SafeLink Band"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="신호 강도:"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:id="@+id/signal_strength_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-45 dBm"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="마지막 연결:"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:id="@+id/last_connected_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="방금 전"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 