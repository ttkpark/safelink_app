<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CustomerConsentFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="개인정보 수집 동의"
            app:subtitle="SafeLink 서비스 이용을 위한 동의" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 제목 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="개인정보 수집 및 이용에 대한 동의"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:gravity="center" />

            <!-- 설명 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="SafeLink 서비스 이용을 위해 아래 개인정보 수집 및 이용에 대한 동의가 필요합니다."
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center" />

            <!-- 약관 내용 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/consent_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/consent_terms"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurface"
                        android:lineSpacingExtra="2dp" />

                </ScrollView>

            </com.google.android.material.card.MaterialCardView>

            <!-- 동의 여부 체크박스 -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_consent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="위 개인정보 수집 및 이용에 동의합니다"
                android:textSize="14sp" />

            <!-- 버튼 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_decline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="아니오"
                    android:textSize="14sp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_accept"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="예"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- 안내 문구 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="* 동의하지 않으시면 개인 사용 모드를 이용하실 수 있습니다."
                android:textSize="12sp"
                android:textColor="?attr/colorError"
                android:gravity="center" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 